      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="freewind.colablog.AppController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Button mnemonicParsing="false" onAction="#toggleArticlesPane" text="Articles"/>
            </children>
        </VBox>
        <ListView fx:id="articlesPane" prefHeight="200.0" prefWidth="200.0"/>
        <TextAreaSupportsPastingImage
                fx:id="editor" wrapText="true"
                prefHeight="200.0" prefWidth="200.0"/>
        <WebView fx:id="preview" prefHeight="200.0" prefWidth="200.0"/>
    </children>
</HBox>
